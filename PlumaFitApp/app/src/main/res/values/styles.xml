<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Toolbar  -->
    <style name="Toolbar" />

    <style name="Toolbar.White">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/Secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.White.Bottom">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/Secondary</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Toolbar.Blue">
        <item name="android:textSize">@dimen/text_headline</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rectangle_1</item>
    </style>

    <style name="inputwhite" parent="Widget.Design.TextInputLayout">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="Widget.Theme.GlicemapApp.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.GlicemapApp.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="RoundedAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
    </style>

</resources>