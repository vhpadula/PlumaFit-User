<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GlicemapApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/Primary</item>
        <item name="colorAccent">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/Secondary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/Secondary</item>
        <item name="colorControlHighlight">@color/Secondary</item>

        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.GlicemapApp.Fullscreen" parent="Theme.GlicemapApp">
        <item name="android:actionBarStyle">@style/Widget.Theme.GlicemapApp.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.GlicemapApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>