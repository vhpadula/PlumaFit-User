<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/notifications"
    tools:context=".ui.main.psico.MedicineFragment"
    android:background="@color/Primary">

    <include layout="@layout/collapsing_toolbar_white"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/appBarWhite"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/gym_tv"
    android:text="Recomendações e Medicamentos"
    android:textColor="@color/white"
    android:textSize="@dimen/text_headline"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notifications_rv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/gym_tv"
        android:layout_marginTop="@dimen/margin_large_mediumX"
        android:padding="@dimen/margin_medium"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        tools:visibility ="visible"/>
    <Button
        android:id="@+id/new_emotion_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Nova Emoção"
        android:backgroundTint="@color/Secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notifications_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>