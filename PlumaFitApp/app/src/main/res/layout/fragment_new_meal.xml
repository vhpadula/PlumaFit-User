<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/newMeasure"
    android:background="@color/Primary"
    tools:context=".ui.main.home.NewExerciseFragment">



    <include layout="@layout/collapsing_toolbar_white"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        tools:visibility ="visible"/>

    <TextView
        android:id="@+id/meal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/appBarWhite"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Refeição"
        android:textSize="@dimen/text_subheading"
        android:textColor="@color/Secondary"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large_mediumX"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="Refeição"
        style="bold"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/meal_et"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginBottom="@dimen/margin_large_mediumX"
        android:layout_marginEnd="@dimen/margin_medium"
        android:textColorHighlight="@color/TransparentNavyBlue"
        android:textColor="@color/Secondary"
        app:layout_constraintTop_toBottomOf="@id/appBarWhite"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/div1"
        app:layout_constraintTop_toBottomOf="@id/meal_tv"
        android:layout_marginVertical="@dimen/margin_large_mediumX"/>

    <TextView
        android:id="@+id/time_of_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/div1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Horário"
        android:textSize="@dimen/text_subheading"
        android:textColor="@color/Secondary"
        android:layout_marginVertical="@dimen/margin_large_mediumX"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="Horário"
        style="bold"/>

    <TextView
        android:id="@+id/time_of_day_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:textSize="@dimen/text_subtitle"
        app:layout_constraintTop_toBottomOf="@id/div1"
        app:layout_constraintEnd_toEndOf="@id/parent"
        app:layout_constraintStart_toEndOf="@id/time_of_day_tv"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:textColorHighlight="@color/white"
        android:backgroundTint="@color/Secondary"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"

        android:textColor="@color/white"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/div2"
        app:layout_constraintTop_toBottomOf="@id/time_of_day_tv"
        android:layout_marginVertical="@dimen/margin_large_mediumX"/>

    <TextView
        android:id="@+id/type_of_meal_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/div2"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Tipo:"
        android:text="Tipo:"
        android:textSize="@dimen/text_subheading"
        android:textColor="@color/Secondary"
        android:layout_marginVertical="@dimen/margin_large_mediumX"
        android:layout_marginStart="@dimen/margin_medium"
        style="bold"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/type_of_meal_et"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_large_mediumX"
        android:hint="Almoço"
        android:maxLength="1"
        android:textAlignment="center"
        android:textColor="@color/Secondary"
        android:textColorHighlight="@color/TransparentNavyBlue"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/div2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="48dp"
        tools:layout_editor_absoluteX="272dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/div3"
        app:layout_constraintTop_toBottomOf="@id/type_of_meal_tv"
        android:layout_marginVertical="@dimen/margin_large_mediumX"/>

    <TextView
        android:id="@+id/notes_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/div3"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Anotações"
        android:textSize="@dimen/text_subheading"
        android:textColor="@color/Secondary"
        android:layout_marginVertical="@dimen/margin_large_mediumX"
        android:layout_marginStart="@dimen/margin_medium"
        android:text="@string/new_measurement_notes"
        style="bold"/>

    <EditText
        android:id="@+id/notes_et"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginEnd="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/div3"
        android:textColor="@color/Secondary"
        android:gravity="top"
        android:textColorHint="@android:color/darker_gray"
        android:padding="10dp"
        android:hint="@string/new_measurement_notes_hint"
        android:textColorHighlight="@color/TransparentNavyBlue"
        app:layout_constraintBottom_toTopOf="@id/save_button"
        android:layout_marginVertical="@dimen/margin_medium"
        android:background="@drawable/rectangle_text_box"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Registrar"
        app:layout_constraintTop_toBottomOf="@+id/notes_et"
        android:backgroundTint="@color/Secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:borderWidth="0dp"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>